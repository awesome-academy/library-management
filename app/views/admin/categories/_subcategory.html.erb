<ul>
  <% subcategories.each do |sub| %>
    <li>
      <%= sub.name %> <%= link_to t("admin.edit"),
        edit_admin_category_path(sub), class: "btn btn-primary btn-xs" %>
      <%= link_to t("admin.delete"), admin_category_path(sub),
        method: :delete, class: "btn btn-danger btn-xs",
        data: {confirm: t("admin.delete_confirm")} %>
      <%= render partial: "subcategory",
        locals: {subcategories: sub.subcategories} if
          sub.subcategories.present? %>
    </li>
  <% end %>
</ul>
