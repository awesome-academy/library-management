<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= link_to t("admin.create_category") ,new_admin_category_path,
          class: "btn btn-primary" %>
      </div>
      <div class="panel-body">
        <% @categories.each do |category| %>
          <ul>
            <% if category.parents.nil? %>
              <li>
                <%= category.name %>
                <%= link_to t("admin.edit"), edit_admin_category_path(category),
                  class: "btn btn-primary btn-xs" %>
                <%= link_to t("admin.delete"), admin_category_path(category),
                  method: "delete", class: "btn btn-danger btn-xs",
                  data: { confirm: t("admin.delete_confirm") } %>
                <%= render partial: "subcategory",
                  locals: {subcategories: category.subcategories} if
                    category.subcategories.present? %>
              </li>
            <% end %>
          </ul>
        <% end %>
      </div>
      <div class="panel-body">
        <%= paginate @categories %>
      </div>
    </div>
  </div>
</div>
