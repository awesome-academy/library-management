<div class="single-product-wrapper">
  <div class="product-img">
    <%= image_tag @book.image %>
    <%= image_tag @book.image, class: "hover-img" %>
    <div class="product-badge offer-badge">
      <span><%= t "client.new" %></span>
    </div>
    <div class="product-favourite">
      <a href="#" class="favme fa fa-heart"></a>
    </div>
  </div>
  <div class="product-description">
    <span> <% if @book.category %>
          <%= @book.category.name %>
          <% end %></span>
      <h3><%= link_to @book.name, book_show_path(@book) %></h3>
    <span>author</span><p class="product-price"><%= @book.author.name %></p>
    <div class="hover-content">
      <div class="add-to-cart-btn">
        <%= link_to t("client.add_to_cart"), cart_add_path(@book), method: :post, class: "btn essence-btn" %>
      </div>
    </div>
      </div>
</div>
