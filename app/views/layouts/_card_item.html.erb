<div class="single-cart-item">
  <%= link_to cart_delete_path(@item), method: :delete, class:"product-image" do %>
    <%= image_tag @item.image, class: "cart-thumb" %>
    <div class="cart-item-desc">
      <span class="product-remove">
        <i class="fa fa-close" aria-hidden="true">
        </i></span>
      <span class="badge"><%= @item.author.name %></span>
      <h6><%= @item.name %></h6>
      <p class="size"><%= t "client.publishers" %> <%= @item.publisher.name %></p>
      <p class="color"><%= t "client.publishers" %> <%= @item.page_number %></p>
    </div>
  <% end %>
</div>
